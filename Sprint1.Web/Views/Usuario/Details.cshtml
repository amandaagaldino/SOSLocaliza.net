@model Sprint1.Models.ViewModels.UsuarioDetailsViewModel

@{
    ViewData["Title"] = "Detalhes do Usuário";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="bi bi-person-circle me-2"></i>Detalhes do Usuário
                </h4>
                @if (Model.Ativo)
                {
                    <span class="badge bg-light text-success">
                        <i class="bi bi-check-circle me-1"></i>Ativo
                    </span>
                }
                else
                {
                    <span class="badge bg-light text-secondary">
                        <i class="bi bi-x-circle me-1"></i>Inativo
                    </span>
                }
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        <i class="bi bi-hash me-1"></i>ID:
                    </dt>
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4">
                        <i class="bi bi-person me-1"></i>Nome Completo:
                    </dt>
                    <dd class="col-sm-8">@Model.NomeCompleto</dd>

                    <dt class="col-sm-4">
                        <i class="bi bi-envelope me-1"></i>Email:
                    </dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">
                        <i class="bi bi-card-text me-1"></i>CPF:
                    </dt>
                    <dd class="col-sm-8">@Model.Cpf</dd>

                    <dt class="col-sm-4">
                        <i class="bi bi-calendar-event me-1"></i>Data de Nascimento:
                    </dt>
                    <dd class="col-sm-8">@Model.DataNascimento.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4">
                        <i class="bi bi-calendar-plus me-1"></i>Data de Criação:
                    </dt>
                    <dd class="col-sm-8">@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</dd>

                    @if (Model.DataAtualizacao.HasValue)
                    {
                        <dt class="col-sm-4">
                            <i class="bi bi-calendar-check me-1"></i>Última Atualização:
                        </dt>
                        <dd class="col-sm-8">@Model.DataAtualizacao.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                    }
                </dl>
            </div>
            <div class="card-footer bg-light">
                <div class="btn-group" role="group">
                    <a asp-action="EditEmail" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-envelope me-1"></i>Alterar Email
                    </a>
                    <a asp-action="EditSenha" asp-route-id="@Model.Id" class="btn btn-secondary">
                        <i class="bi bi-key me-1"></i>Alterar Senha
                    </a>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" 
                          style="display:inline;" onsubmit="return confirm('Tem certeza que deseja remover este usuário? Esta ação não pode ser desfeita.');">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Remover Usuário
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Voltar para Lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
