@{
    ViewData["Title"] = "Home";
}

<div class="text-center mb-5">
    <h1 class="display-4 mb-3">
        <i class="bi bi-shield-check text-primary"></i> SOSLocaliza
    </h1>
    <p class="lead text-muted">Gerencie usuários e informações de forma fácil e eficiente</p>
</div>

<div class="row g-4 mb-5">
    <div class="col-md-6">
        <div class="card h-100 shadow border-0 home-feature-card">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="bi bi-people text-primary" style="font-size: 3rem;"></i>
                </div>
                <h5 class="card-title">Gerenciar Usuários</h5>
                <p class="card-text text-muted">
                    Cadastre, visualize, edite e gerencie os usuários do sistema.
                </p>
                <a asp-controller="Usuario" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-right me-1"></i>Acessar
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card h-100 shadow border-0 home-feature-card">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="bi bi-database-check text-success" style="font-size: 3rem;"></i>
                </div>
                <h5 class="card-title">Testar Conexão</h5>
                <p class="card-text text-muted">
                    Verifique o status da conexão com o banco de dados Oracle.
                </p>
                <a asp-controller="Usuario" asp-action="TestConnection" class="btn btn-success">
                    <i class="bi bi-arrow-right me-1"></i>Testar
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="system-info-card shadow-sm">
            <div class="system-info-header">
                <div class="system-info-icon">
                    <i class="bi bi-info-circle"></i>
                </div>
                <h5 class="system-info-title">Informações do Sistema</h5>
            </div>
            <hr class="system-info-divider">
            <div class="system-info-description">
                <p class="mb-0">
                    O <strong>SOSLocaliza</strong> é um projeto que visa promover a segurança da população em situação de risco climático. A aplicação desenvolvida em C# gerencia, como foco principal, o CRUD (Create, Read, Update, Delete) de usuários.
                </p>
            </div>
            <div class="row g-4 mt-2">
                <div class="col-md-6">
                    <div class="system-info-section">
                        <h6 class="system-info-subtitle system-info-subtitle-blue">
                            <span class="system-section-icon system-icon-blue">
                                <i class="bi bi-check-circle"></i>
                            </span>
                            Funcionalidades Disponíveis
                        </h6>
                        <ul class="system-info-list system-list-blue">
                            <li>CRUD completo de Usuários</li>
                            <li>Validações de formulários</li>
                            <li>Interface responsiva</li>
                            <li>API REST com Swagger</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="system-info-section">
                        <h6 class="system-info-subtitle system-info-subtitle-green">
                            <span class="system-section-icon system-icon-green">
                                <i class="bi bi-code-slash"></i>
                            </span>
                            Tecnologias Utilizadas
                        </h6>
                        <ul class="system-info-list system-list-green">
                            <li>ASP.NET Core 8.0</li>
                            <li>Entity Framework Core</li>
                            <li>Oracle Database</li>
                            <li>Bootstrap 5</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
