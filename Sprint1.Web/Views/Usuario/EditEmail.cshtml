@model Sprint1.DTOs.Usuario.AlterarEmailDto

@{
    ViewData["Title"] = "Alterar Email";
    var usuarioId = ViewBag.UsuarioId;
}

<h1>Alterar Email</h1>

@if (!ViewData.ModelState.IsValid)
{
    <div>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="EditEmail" asp-route-id="@usuarioId" method="post">
    <div>
        <label asp-for="Email">Novo Email:</label>
        <input asp-for="Email" type="email" />
        <span asp-validation-for="Email"></span>
    </div>
    
    <div>
        <button type="submit">Alterar Email</button>
        <a asp-action="Details" asp-route-id="@usuarioId">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

