@model Sprint1.Models.ViewModels.AlterarEmailViewModel

@{
    ViewData["Title"] = "Alterar Email";
    var usuarioId = ViewBag.UsuarioId as int?;
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0">
                    <i class="bi bi-envelope me-2"></i>Alterar Email do Usuário
                </h4>
            </div>
            <div class="card-body">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger" role="alert">
                        <h5 class="alert-heading"><i class="bi bi-exclamation-triangle me-2"></i>Erros de Validação</h5>
                        <hr>
                        <div asp-validation-summary="All" class="mb-0"></div>
                    </div>
                }

                <form asp-action="EditEmail" asp-route-id="@usuarioId" method="post">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="novo@email.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <small class="form-text text-muted">Digite o novo endereço de email</small>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Details" asp-route-id="@usuarioId" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-warning text-dark">
                            <i class="bi bi-check-circle me-1"></i>Alterar Email
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
